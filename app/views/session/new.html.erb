<style type="text/css">
  .jumbotron {
    text-align: center;
    left: 50%;

  }
  #login-form {
    width: 70%;
    margin: 0 auto;
  }

  .login {
    width: 30%;
    margin: 0 auto;
  }
.jumbotron {
  background-image: url("http://imgur.com/Uu09QId.png");
}
  body {
      background-image: url("http://imgur.com/Uu09QId.png");
}

}
</style>


 <div class="jumbotron">

  <h1 id="login-h1">Login or Create an Account</h1>

  <div class="row">

    <div class="registered-users">
      <h3>Registered Users</h3>
      <h5>Please login with your account name</h5>

      <% flash.each do |k, v| %>
        <h4 id="<%= k %>"><%= v %></h4>
      <% end %>
      <div id="login-form">
        <%= form_for :user do |f| %>
          <div class="form-group">
            <%= f.label :name %>:
            <%= f.text_field :name , class: "form-control", autofocus: true %>
          </div>
          <div class="form-group">
            <%= f.label :password %>:
            <%= f.password_field :password , class: "form-control" %>
          </div>
          <div class="form-group login">
            <%= f.submit "Login", class: "form-control btn btn-default", id: "login-btn" %>
          </div>
        <% end %>
      </div>
    </div>

    <div class="new-users">
      <h3>New Users</h3>
      <%= button_to "Register", "/signup", method: :get, class: "btn btn-default", id:"signup-btn"%>
    </div>
  </div>

</div>